<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="@string/pref_country_key"
        android:title="@string/pref_country_label"
        android:dialogTitle="@string/pref_country_dialog_title"
        android:entries="@array/pref_country_entries"
        android:entryValues="@array/pref_country_values"
        android:defaultValue="@string/pref_country_us"/>

    <CheckBoxPreference
        android:defaultValue="@string/pref_enable_controls_default"
        android:key="@string/pref_enable_controls_key"
        android:summaryOff="@string/pref_enable_controls_false"
        android:summaryOn="@string/pref_enable_controls_true"
        android:title="@string/pref_enable_controls_label" />

</PreferenceScreen>
